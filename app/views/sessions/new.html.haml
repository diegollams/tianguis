%h3.text-center Sign in

= form_tag '/login' do
  .form-group
    %label{for: "email"}
      Email address
    = text_field_tag :email, '', class: 'form-control'
  .form-group
    %label{for: "email"}
      Password
    = password_field_tag :password, '', class: 'form-control'
  = submit_tag "Submit", class: 'btn btn-default'